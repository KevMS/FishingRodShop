extends layout

block content
  nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
      .container
        a.navbar-brand(href='#')
          span Fishing
          | Rod
        button.navbar-toggler(aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation' data-bs-target='#navbarSupportedContent' data-bs-toggle='collapse' type='button')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(href='/home') Home
            li.nav-item
              a.nav-link(href='/about') About
            li.nav-item
              a.nav-link(href='/product') Products
            li.nav-item
              a.nav-link(href='/contact') Contact
            li.nav-item
              a.appbtn(href='/cart') Shop
            li.nav-item
              a.logoutbtn(href='/cart') Logout
  .br.my-3
  br
  #about.my-5
    .row
      .col-md-6
        img.img-fluid(src='/images/rods.jpg' alt='Fishing rods' width='500' height='500')
      .col-md-6
        h2 About Our Fishing Rods
        p
          | At Fishing Co., we pride ourselves on offering some of the best fishing rods on the market. Our rods are made from high-quality materials and are designed to give you the best possible fishing experience. Whether you're a seasoned pro or a beginner, we have the perfect rod for you.
        h3 Our Rods
        ul
          li High-quality materials
          li Durable and long-lasting
          li Designed for optimal performance
          li Available in a variety of sizes and styles
        p
          | Shop our selection of fishing rods today and experience the Fishing Co. difference.
        a.btn.btn-primary(href='#') Shop Now
  

    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
