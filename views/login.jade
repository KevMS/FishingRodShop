extends layout

block content
  
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
      .container
        a.navbar-brand(href='#')
          span Fishing
          | Rod
        button.navbar-toggler(aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation' data-bs-target='#navbarSupportedContent' data-bs-toggle='collapse' type='button')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.mb-2.mb-lg-0
    .br.my-5
    br
    br
    form#login.card.shadow-2-strong(style='border-radius: 1rem;')
            .card-body.p-3.text-center
              h3.mb-5 Sign in
              .form-outline.mb-4
                input#username.form-control.form-control-lg(type='email' required='')
                label.form-label(for='username') Email
              .form-outline.mb-4
                input#password.form-control.form-control-lg(type='password' required='')
                label.form-label(for='password') Password
              // Checkbox
              .form-check.d-flex.justify-content-start.mb-4
                input#remember.form-check-input(type='checkbox' value='')
                label.form-check-label(for='remember')  Remember password 
              button#submit.btn.btn-primary.btn-lg.btn-block(type='submit' onclick="validate()") Login      
              hr.my-4
              a.appbtn(href='/') Back to Landing Page
              
    script(src='/javascripts/login.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js')

